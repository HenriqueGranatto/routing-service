FROM ubuntu:18.04

RUN apt-get update
RUN apt-get install -y libboost-all-dev build-essential git nodejs npm
RUN git clone https://github.com/VROOM-Project/vroom.git

WORKDIR /vroom

RUN git checkout release/1.5
RUN cd src && make

WORKDIR /

RUN git clone https://github.com/HenriqueGranatto/vroom-express.git

RUN cd vroom-express && npm install

CMD ["node", "vroom-express/src/index.js"]